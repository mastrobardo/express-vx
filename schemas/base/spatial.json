{
    "$id": "/schemas/base/spatial",
    "location": {
        "$id": "#/location",
        "type": "object",
        "properties": {
            "location": {
                "type": "string"
            },
            "coordinates": {
                "$ref": "#/lat-lon-coords"
            }
        },
        "required": [
            "location",
            "coordinates"
        ],
        "additionalProperties": false
    },
    "lat-lon-coords": {
        "$id": "#/lat-lon-coords",
        "type": "object",
        "properties": {
            "lat": {
                "type": "number",
                "minimum": -90,
                "maximum": 90
            },
            "lon": {
                "type": "number",
                "minimum": -180,
                "maximum": 180
            }
        },
        "required": [
            "lat",
            "lon"
        ]
    },
    "area": {
        "$id": "#/area",
        "type": "object",
        "properties": {
            "center": {
                "$ref": "#/location"
            },
            "radius_meters": {
                "type": "number",
                "minimum": 0,
                "maximum": 20000000
            }
        },
        "required": [
            "center",
            "radius_meters"
        ]
    }
}